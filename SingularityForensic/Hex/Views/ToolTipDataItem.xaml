<UserControl x:Class="SingularityForensic.Hex.Views.ToolTipDataItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SingularityForensic.Hex.Views"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="120">
    <DockPanel MinWidth = "120" >
        <TextBlock Text="{Binding KeyName,FallbackValue=Position}" DockPanel.Dock="Left"/>
        <TextBlock Text = "{Binding Value,FallbackValue=1048576}" DockPanel.Dock="Right"/>
        <Border/>
    </DockPanel>
</UserControl>
