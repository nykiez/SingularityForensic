        <controls:TreeViewEx BorderThickness="0" Background="White" PreviewMouseDown="CaseTreeList_PreviewMouseDown" 
            Style="{DynamicResource TreeViewExStyle}"
            DockPanel.Dock="Top" ItemsSource="{Binding TreeUnits}" x:Name="CaseTreeList" 
                                 ItemTemplate="{DynamicResource TreeViewExItemTemplate}">
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                    <Setter Property="Padding" Value="{Binding Level,Converter={x:Static local:LevelToMarginConverter.StaticInstance}}"/>
                    <!--<Setter Property="i:Interaction.Triggers">
                        <Setter.Value>
                            <i:EventTrigger EventName="RightMouseDown">
                                <i:InvokeCommandAction Command="{Binding RightClickCommand}"/>
                            </i:EventTrigger>
                        </Setter.Value>
                    </Setter>-->
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu ItemsSource="{Binding ContextCommands}">
                                <ContextMenu.ItemContainerStyle>
                                    <Style TargetType="MenuItem" BasedOn="{StaticResource {x:Type MenuItem}}">
                                        <Setter Property="Command" Value="{Binding Command}"/>
                                        <Setter Property="Header" Value="{Binding CommandName}"/>
                                        <Setter Property="ItemsSource" Value="{Binding Children}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasParameter,FallbackValue=False}" Value="True">
                                                <Setter Property="CommandParameter" Value="{Binding CommandParameter}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContextMenu.ItemContainerStyle>
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ContextCommands}" Value="{x:Null}">
                            <Setter Property="ContextMenu" Value="{x:Null}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TreeView.ItemContainerStyle>
        </controls:TreeViewEx>
    </DockPanel>
