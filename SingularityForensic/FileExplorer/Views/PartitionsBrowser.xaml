                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Border/>
                        </DockPanel>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding StartSec,Mode=OneTime}" IsReadOnly="True" Width="120" Header="{DynamicResource StartSec}"/>
