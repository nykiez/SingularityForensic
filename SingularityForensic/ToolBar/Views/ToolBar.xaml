<UserControl x:Class="SingularityForensic.ToolBar.Views.ToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://www.codeplex.com/prism"
             xmlns:local="clr-namespace:SingularityForensic.ToolBar.Views"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <ToolBar >
        <ItemsControl ItemsSource="{Binding ToolBarItems}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <!--<DataTemplate>
                        <Button Margin="3,1" Command="{Binding Command}" Padding="3,0"  Style="{DynamicResource TransparentButton}">
                            <StackPanel>
                                <Image Width="12" Source="{Binding IconSource}" Stretch="Fill" ToolTip="{Binding Text}"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>-->
                <DataTemplate>
                    <ContentControl Content="{Binding UIObject}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ToolBar>
</UserControl>
