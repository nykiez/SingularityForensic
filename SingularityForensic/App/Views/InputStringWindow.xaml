<metros:MetroWindow x:Class="SingularityForensic.App.Views.InputStringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:metros="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowCloseButton="True"
       SizeToContent="Height" Width="400" Style="{DynamicResource WindowStyle}">
    
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="24,24">
            <TextBlock x:Name="txbDesc" />
            <TextBox x:Name="txbVal" Margin="0,12" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button  HorizontalAlignment="Center" Content="{DynamicResource Confirm}" Click="Button_Click" Margin="24,0" />
                <Button HorizontalAlignment="Center" 
                        Content="{DynamicResource Cancel}" x:Name="btnCancel" Click="BtnCancel_Click" Margin="24,0" />
            </StackPanel>
            
        </StackPanel>
    </Grid>
</metros:MetroWindow>
