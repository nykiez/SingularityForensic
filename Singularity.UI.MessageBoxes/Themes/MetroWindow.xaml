<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:metros="http://metro.mahapps.com/winfx/xaml/controls">
    <Style TargetType="{x:Type metros:MetroWindow}" >
        <Setter Property="WindowTitleBrush" Value="{DynamicResource MetroWindow.TitleBrush}"/>
        <Setter Property="MinWidth" Value="1024" />
        <Setter Property="MinHeight" Value="768" />
        <Setter Property="Width" Value="1300"/>
        <Setter Property="Height" Value="768"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="TitlebarHeight" Value="52"/>
    </Style>
</ResourceDictionary>