<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:CDFCControls.Controls;assembly=CDFCControls"
                    xmlns:local="clr-namespace:Singularity.UI.Themes">
    <Style x:Key="MsgWindowStyle" TargetType="{x:Type controls:CorneredWindow}" >
        <Setter Property="WindowTitleBrush" Value="#5e6164"/>
        <Setter Property="Padding" Value="0,0,0,12"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#3f92f0"/>
        <Setter Property="TitleForeground" Value="White"/>
        <Setter Property="ShowCloseButton" Value="False"/>
    </Style>
</ResourceDictionary>